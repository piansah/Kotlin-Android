<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FontStyle"
        android:text="Android University"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="15dp"
        android:layout_below="@id/textView"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/images"
        android:layout_centerHorizontal="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextEmail"
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_email_24"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextPassword"
        android:layout_below="@id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_lock_24"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SignUp"
        android:layout_below="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="12dp"
        android:text="Sign Up"
        android:textStyle=""
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:contentDescription="Sign Up Button"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_below="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="12dp"
        android:text="Sign In"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#0095f6"
        android:contentDescription="Login Button"
        />

    <TextView
        android:id="@+id/text"
        android:layout_below="@+id/login"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="25dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="By signing in you accept the Terms of Use and acknowledge the Privacy Policy and Cookie Policy."
        />
</RelativeLayout>

